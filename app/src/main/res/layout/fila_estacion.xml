<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/marginEstacion"
    android:id="@+id/layoutFilaEstacion">

    <ImageView
        android:id="@+id/iconoEstacion"
        android:layout_width="@dimen/estacionWidth"
        android:layout_height="@dimen/estacionHeight"
        app:srcCompat="@drawable/ic_adjust_black_24dp"
        android:layout_marginRight="@dimen/marginIcEstacion"
        />

    <TextView
        android:id="@+id/nombreEstacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iconoEstacion"
        android:layout_alignTop="@id/iconoEstacion"
        android:layout_toRightOf="@id/iconoEstacion"
        android:gravity="center_vertical"
        android:text="Nombre de la estación"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/instruccionRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreEstacion"
        android:layout_toRightOf="@id/iconoEstacion"
        android:text="Tome la ruta X en dirección Y"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
</RelativeLayout>