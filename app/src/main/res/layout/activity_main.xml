<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ml.mitron.tdm.tdm.MainActivity"
    android:clipToPadding="false">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardSeleccion"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/cardMargin"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/radiusCard"
        card_view:cardElevation="@dimen/elevationCard"
        card_view:contentPadding="@dimen/cardPadding"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/layoutSeleccion"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--

            <TextView
                android:id="@+id/textoBienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/encontrarRuta"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />



            <TextView
                android:id="@+id/textoOrigen"
                android:layout_below="@id/textoBienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estacionOrigen"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

                -->

            <LinearLayout
                android:layout_alignParentTop="true"
                android:id="@+id/seleccionOrigen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_adjust_black_24dp" />

                <SearchView
                    android:id="@+id/searchOrigen"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:iconifiedByDefault="false"/>


            </LinearLayout>

            <!--

            <TextView
                android:layout_below="@id/seleccionOrigen"
                android:id="@+id/textoDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/estacionDestino"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

                -->

            <LinearLayout
                android:id="@+id/seleccionDestino"
                android:layout_below="@id/seleccionOrigen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_place_black_24dp" />

                <EditText
                    android:transitionName="searchField"
                    android:id="@+id/searchDestino"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:iconifiedByDefault="false"/>

            </LinearLayout>

            <Button
                android:id="@+id/botonBusqueda"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seleccionDestino"
                android:text="@string/buttonCalcular" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
