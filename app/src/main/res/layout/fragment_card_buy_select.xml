<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_ic_buy_select_infinity"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_card_infinity" />

            <TextView
                android:id="@+id/text_view_buy_select_infinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="INFINITY"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/text_view_buy_select_infinity_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Viaja tanto como quieras. Todos los viajes son gratis." />

            <ImageView
                android:id="@+id/imageView_ic_buy_select_element"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/ic_card_element" />

            <TextView
                android:id="@+id/text_view_buy_select_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ELEMENT"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/text_view_buy_select_element_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Paga lo justo en cada viaje." />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>