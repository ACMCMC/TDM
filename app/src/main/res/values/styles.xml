<resources>

    <!-- Base application theme. -->
    <style name="predeterminado" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Bold">
    </style>

    <style name="Bold.Button" parent="Widget.AppCompat.Button.Borderless"></style>

    <style name="Bold.Background">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Bold.Headline" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/blanco</item>

    </style>

    <style name="Bold.Display2" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/blanco</item>

    </style>
    
    <style name="Bold.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style
        name="nombre_estacion"
        parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/negro</item>
    </style>

    <style name="Card">

    </style>

    <style name="Card.Card"
        >
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:elevation">@dimen/elevationCard</item>
        <item name="cardCornerRadius">@dimen/radiusCard</item>
        <item name="cardElevation">@dimen/elevationCard</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_margin">@dimen/cardMargin</item>
    </style>

</resources>
