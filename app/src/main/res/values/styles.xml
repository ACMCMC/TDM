<resources>

    <!-- Base application theme. -->
    <style name="Theme.TDM" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gris</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Bold"></style>

    <style name="Bold.Button" parent="Widget.AppCompat.Button.Borderless"></style>

    <style name="Bold.Background">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Bold.Headline" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/blanco</item>

    </style>

    <style name="Bold.Display2" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/blanco</item>

    </style>

    <style name="Bold.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="nombre_estacion" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/negro</item>
    </style>

    <style name="Card">

    </style>

    <style name="Card.Card">
        <item name="android:layout_marginTop">@dimen/cardMargin</item>
        <item name="android:layout_marginLeft">@dimen/cardMargin</item>
        <item name="android:layout_marginRight">@dimen/cardMargin</item>
        <item name="android:layout_marginBottom">@dimen/cardMargin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">@dimen/radiusCard</item>
        <item name="android:translationZ">-1dp</item>
        <!--
        <item name="contentPaddingTop">16dp</item>
        <item name="contentPaddingBottom">16dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        -->


    </style>

    <style name="TDMCard"></style>

    <style name="TDMCard.CardText">
        <item name="fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
